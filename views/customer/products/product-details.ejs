<%- include("../../shared/includes/head",{pageTitle: product.title }) %>
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/cart-management.js" defer></script>
    </head>
    <body>
        <%- include("../../shared/includes/header") %>
            <main id="product-details">
                <header>
                    <img src="<%= product.remoteUrl %>" alt="<%= product.title %>">
                    <div id="product-info">
                        <h1><%= product.title %></h1>
                        <p>â‚¹<%= product.price %></p>
                        <p><%= product.summary %></p>
                        <button class="btn" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Add to Cart</button>
                        <% if(locals.cart) { %>
                            <form action="/cart" method="GET">
                                <button class="btn btn-alt" id="go-to-cart">Go to Cart</button>
                            </form>
                        <% } %> 
                        <form action="/" method="GET">
                            <button class="btn btn-alt">Back to Products</button>
                        </form>
                    </div>
                </header>

                <p id="product-description"><%= product.description %></p>
            </main>
            <%- include("../../shared/includes/footer") %>